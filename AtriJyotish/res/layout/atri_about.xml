<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--         android:layout_width="fill_parent"   -->
     
       <ImageView
            android:id="@+id/imageViewP1"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:layout_margin="5dp"
            android:background="#fff"
            android:paddingBottom="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ganesh" />

       <TextView
            android:id="@+id/lVersion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/imageViewP1"
	        style="@android:style/TextAppearance.Large"
	        android:layout_centerHorizontal="true"
	        android:inputType="textMultiLine"
	        android:text="@string/version" />

       <ImageView
            android:id="@+id/imageViewP2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="#fff"
            android:paddingBottom="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingTop="3dp"
	        android:layout_centerHorizontal="true"
		    android:gravity="center"
            android:layout_below="@+id/lVersion"
            android:src="@drawable/sun" />
       
       
       <TextView
            android:id="@+id/lInfo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/imageViewP2"
	        android:layout_centerHorizontal="true"
	        android:textSize="26sp"
	        android:text="@string/vInfo" />
       
       <TextView
            android:id="@+id/email"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/lInfo"
	        android:layout_centerHorizontal="true"
	        android:textSize="20sp"
	   		android:gravity="center"
	        android:text="@string/email" />

       <TextView
            android:id="@+id/rights"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/email"
	        android:layout_centerHorizontal="true"
	        android:textSize="15sp"
	        android:textColor="#ff0000"
	   		android:gravity="center"
	        android:text="(Not liable for any damage incurred from use of this software)" />
       
       <Button   
          android:id="@+id/btnOK"
		  android:text="OK"
		  android:layout_width="80dp"
		  android:layout_height="35dp"
		  android:padding="2dip"
		  android:textSize="20dp" 
	      android:layout_centerHorizontal="true"
		  android:gravity="center"
          android:layout_below="@+id/rights"
          />
       
</RelativeLayout>



